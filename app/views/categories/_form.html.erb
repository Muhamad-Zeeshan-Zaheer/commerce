<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%=@category.new_record? ? 'New Category' : 'Category item'%> </h5>

      <%= form_with model: @category do |form| %>
        <div class="mb-3"> 
          <%= form.label :Title, class: "form-label" %>
          <%= form.text_field :name, class: "form-control",placeholder:"Enter the category name"%> 
        </div>
        
        <div class="mb-3 text-end me-2">
          <%= form.submit class: "btn btn-success" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>