<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%=@item.new_record? ? 'New Item' : 'Edit item'%> </h5>

      <%= form_with model: @item do |form| %>
        <div class="mb-3"> 
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control",placeholder:"Enter the item name"%> 
        </div>

        <div class="mb-3"> 
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control",placeholder:"Enter the item descripiton", rows:5%> 
        </div>

        <div class="mb-3">
          <%=form.label :price, class:"form-label"%>
          <%=form.number_field :price, class: "form-control" , placeholder: "Enter the price of item"%>
        </div>

        <div class="mb-3">
          <%= form.label :category_id, "Category", class: "form-label" %>
          <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "form-control" %>
        </div>


        <div class="mb-3">

        <%=form.label:image, class: "form-label"%>
        <%=form.file_field:image, class:"form-control"%>
        </div>

        <div class="mb-3 text-end me-2">
          <%= form.submit class: "btn btn-success" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>
